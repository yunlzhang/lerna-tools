{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "npmClient":"npm",
  "publishConfig":{
    "access": "public",
    "ignore":[
      "*.md"
    ]
  },
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "registry":"https://registry.npmjs.org"
}
